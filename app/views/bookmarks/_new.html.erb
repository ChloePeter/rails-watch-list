
  <h1 class="modal-title">Add a movie to your <%= list.name %> list</h1>
   <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      <div class="modal-body">
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.association :movie, collection: Movie.all.order(:title), prompt: "Select a movie", input_html: { data: { controller: "slect2" } } %>
          <%= f.input :comment, placeholder: "Enter a comment about the movie" %>
      </div>
      <div class="modal-footer">
          <%= f.submit "Add movie", class: "btn btn-flat" %>
        <% end %>
        <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">Back</button>
     </div>
