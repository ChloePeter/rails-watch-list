<div class="banner">
  <div class="container">
    <div class="text-center text-white">
      <h1>OUR MOVIES <strong>FOR YOU !!!</strong></h1>
      <h3 class="typed-js" data-controller="typed-js"></h3>
      <a class="btn btn-flat" href="#"></a>
      <%= link_to "Create a list", new_list_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
  <div class="row">
